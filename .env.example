# StoryBored Audio - Bi-Furious Build Environment Variables
# Rename this file to .env and fill in your values

# Apple Developer credentials for notarization
APPLE_ID=your.email@example.com
TEAM_ID=HUBXNCHH74

# Build configuration
# BUILD_TYPE can be Debug or Release
BUILD_TYPE=Debug

# Enable/disable code signing and notarization by default
# Set to true or false
DEFAULT_SIGN=false
DEFAULT_NOTARIZE=false
DEFAULT_AAX_SIGN=false

# Control automatic installation of AAX plugins
# Set to true to automatically install AAX plugins to system directory
# Set to false to skip installation (avoid permission errors)
AUTO_INSTALL=false

# SDKs
JUCE_SDK_PATH=/Users/(username)/SDKs/JUCE
AAX_SDK_PATH=/Users/(username)/SDKs/AAX
ARA_SDK_PATH=/Users/(username)/SDKs/ARA_SDK

# AAX Signing Configuration
# Path to PACE wraptool executable
WRAPTOOL_PATH=/Applications/PACEAntiPiracy/Eden/Fusion/bin/wraptool

# AAX Signing Parameters (use either WCGUID or both customer name and number)
# Wrap Config GUID for AAX signing
AAX_SIGNING_WCGUID=your-wcguid-here
# Customer name for AAX signing
AAX_SIGNING_CUSTOMER_NAME=Your Company Name
# Customer number for AAX signing
AAX_SIGNING_CUSTOMER_NUMBER=your-customer-number
# iLok account ID for AAX signing
AAX_SIGNING_ACCOUNT_ID=ilokID
# iLok account password for AAX signing
AAX_SIGNING_ACCOUNT_PASSWORD=your-ilok-password
